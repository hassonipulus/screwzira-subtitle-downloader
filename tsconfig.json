{
    "extends": "@tsconfig/node20",
    "compilerOptions": {
        "strict": false,
        "moduleResolution": "node",
        "verbatimModuleSyntax": false,
        "allowJs": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "~src/*": ["src/*"],
            "~test/*": ["test/*"],
            "~resources/*": ["resources/*"]
        }
    },
    "include": ["./src/**/*", "./test/**/*", "./*.ts", "./*.js"]
}
