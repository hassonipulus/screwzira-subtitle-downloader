{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./_compile",
        "esModuleInterop": true,
        "allowJs": true,
        "target": "es6",
        "lib": ["es6", "es2017"],
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "~src/*": ["src/*"],
            "~test/*": ["test/*"],
            "~resources/*": ["resources/*"]
        },
        "importsNotUsedAsValues": "error"
    },
    "include": ["./src/**/*", "./test/**/*", "./*.ts", "./*.js"]
}
